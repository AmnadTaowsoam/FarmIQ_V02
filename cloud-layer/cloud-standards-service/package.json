{
  "name": "cloud-standards-service",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "FarmIQ Cloud Standards Service - Reference/Standard/Target master data",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "start": "nyc ts-node src/index.ts",
    "build": "tsc && npm run copy-openapi",
    "copy-openapi": "cp openapi.yaml dist/",
    "serve": "node dist/index.js",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "prisma:generate": "npx prisma generate",
    "migrate:up": "npx prisma migrate dev --name init",
    "db:migrate": "npx prisma migrate deploy",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "@types/express": "^4.17.17",
    "cors": "^2.8.5",
    "dd-trace": "^4.46.0",
    "express": "^4.21.0",
    "helmet": "^7.0.0",
    "js-yaml": "^4.1.0",
    "swagger-ui-express": "^5.0.0",
    "ts-dotenv": "^0.9.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.16.5",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "prisma": "^5.16.1",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
