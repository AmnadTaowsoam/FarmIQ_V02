// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Multi-tenant master data models
// All IDs use String type (UUID v7 should be generated in application code)

model Tenant {
  id        String   @id @default(uuid())
  name      String
  status    String   @default("active") // active, inactive, suspended
  type      String   @default("standard") // standard, enterprise, trial
  region    String   @default("TH")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  farms   Farm[]
  barns   Barn[]   @relation("BarnToTenant")
  batches Batch[]  @relation("BatchToTenant")
  devices Device[] @relation("DeviceToTenant")
  sensors Sensor[] @relation("SensorToTenant")
  sensorBindings SensorBinding[] @relation("BindingToTenant")
  sensorCalibrations SensorCalibration[] @relation("CalibrationToTenant")

  @@index([status])
  @@map("tenants")
}

model Farm {
  id        String   @id @default(uuid())
  tenantId  String
  name      String
  location  String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  barns    Barn[]
  batches  Batch[]
  devices  Device[]
  stations Station[] @relation("StationToFarm")

  @@unique([tenantId, name])
  @@index([tenantId])
  @@index([tenantId, status])
  @@map("farms")
}

model Barn {
  id         String   @id @default(uuid())
  tenantId   String
  farmId     String
  name       String
  animalType String?  // e.g., "broiler", "layer", "breeder"
  status     String   @default("active")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  tenant  Tenant  @relation("BarnToTenant", fields: [tenantId], references: [id], onDelete: Cascade)
  farm    Farm    @relation(fields: [farmId], references: [id], onDelete: Cascade)
  batches Batch[]
  devices Device[]
  stations Station[]
  sensors Sensor[] @relation("SensorToBarn")

  @@unique([tenantId, farmId, name])
  @@index([tenantId])
  @@index([tenantId, farmId])
  @@index([tenantId, farmId, status])
  @@map("barns")
}

model Batch {
  id        String    @id @default(uuid())
  tenantId  String
  farmId    String
  barnId    String
  species   String    // e.g., "chicken", "duck"
  startDate DateTime?
  endDate   DateTime?
  status    String    @default("active") // active, completed, cancelled
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  tenant Tenant @relation("BatchToTenant", fields: [tenantId], references: [id], onDelete: Cascade)
  farm   Farm   @relation(fields: [farmId], references: [id], onDelete: Cascade)
  barn   Barn   @relation(fields: [barnId], references: [id], onDelete: Cascade)
  devices Device[]

  @@index([tenantId])
  @@index([tenantId, farmId])
  @@index([tenantId, farmId, barnId])
  @@index([tenantId, status])
  @@map("batches")
}

model Device {
  id          String   @id @default(uuid())
  tenantId    String
  farmId      String?
  barnId      String?
  batchId     String?
  deviceType  String   // e.g., "sensor-gateway", "weighvision"
  serialNo    String?  // Optional serial number
  status      String   @default("active") // active, inactive, maintenance
  metadata    Json?    // Additional device-specific metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tenant Tenant @relation("DeviceToTenant", fields: [tenantId], references: [id], onDelete: Cascade)
  farm   Farm?  @relation(fields: [farmId], references: [id], onDelete: SetNull)
  barn   Barn?  @relation(fields: [barnId], references: [id], onDelete: SetNull)
  batch  Batch? @relation(fields: [batchId], references: [id], onDelete: SetNull)
  sensorBindings SensorBinding[] @relation("BindingToDevice")

  @@unique([tenantId, serialNo])
  @@index([tenantId])
  @@index([tenantId, farmId])
  @@index([tenantId, barnId])
  @@index([tenantId, deviceType])
  @@index([tenantId, status])
  @@map("devices")
}

// Station model (for WeighVision stations within a barn)
// Note: tenantId is stored for multi-tenant isolation but relation is through Farm/Barn
model Station {
  id          String   @id @default(uuid())
  tenantId    String
  farmId      String
  barnId      String
  name        String
  stationType String?  // e.g., "weighing", "feeding"
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations (tenantId is for indexing/isolation, not FK)
  farm Farm @relation("StationToFarm", fields: [farmId], references: [id], onDelete: Cascade)
  barn Barn @relation(fields: [barnId], references: [id], onDelete: Cascade)

  @@unique([tenantId, farmId, barnId, name])
  @@index([tenantId])
  @@index([tenantId, farmId, barnId])
  @@index([tenantId, status])
  @@map("stations")
}

// Sensor Module (Phase 1)
model Sensor {
  id        String   @id @default(uuid())
  tenantId  String
  sensorId  String   // Human-readable stable identifier, unique per tenant
  type      String   // e.g., "temperature", "humidity", "silo_weight", "water_flow"
  unit      String   // e.g., "C", "%", "kg", "L/min"
  label     String?
  barnId    String?  // Optional placement
  zone      String?  // e.g., "A1", "SILO-01"
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tenant      Tenant              @relation("SensorToTenant", fields: [tenantId], references: [id], onDelete: Cascade)
  barn        Barn?               @relation("SensorToBarn", fields: [barnId], references: [id], onDelete: SetNull)
  bindings    SensorBinding[]
  calibrations SensorCalibration[]

  @@unique([tenantId, sensorId])
  @@index([tenantId])
  @@index([tenantId, barnId])
  @@index([tenantId, type])
  @@index([tenantId, enabled])
  @@map("sensors")
}

model SensorBinding {
  id            String    @id @default(uuid())
  tenantId      String
  sensorId      String    // FK to Sensor.id
  deviceId      String    // FK to Device.id
  protocol      String    // e.g., "mqtt", "modbus", "opcua", "http"
  channel       String?   // MQTT topic OR modbus register OR logical channel name
  samplingRate  Int?      // Seconds
  effectiveFrom DateTime
  effectiveTo   DateTime? // null means active indefinitely
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  tenant Tenant @relation("BindingToTenant", fields: [tenantId], references: [id], onDelete: Cascade)
  sensor Sensor @relation(fields: [sensorId], references: [id], onDelete: Cascade)
  device Device @relation("BindingToDevice", fields: [deviceId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, sensorId])
  @@index([tenantId, deviceId])
  @@index([tenantId, sensorId, effectiveFrom])
  @@map("sensor_bindings")
}

model SensorCalibration {
  id          String   @id @default(uuid())
  tenantId    String
  sensorId    String   // FK to Sensor.id
  offset      Float    @default(0)
  gain        Float    @default(1)
  method      String   // e.g., "two-point", "factory"
  performedAt DateTime
  performedBy String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tenant Tenant @relation("CalibrationToTenant", fields: [tenantId], references: [id], onDelete: Cascade)
  sensor Sensor @relation(fields: [sensorId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, sensorId])
  @@index([tenantId, sensorId, performedAt(sort: Desc)])
  @@map("sensor_calibrations")
}
